<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PawnCalcActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/newlogocip"
        tools:layout_editor_absoluteY="111dp"
        app:layout_constraintTop_toBottomOf="@+id/textHeadingCalc"/>

    <TextView
        android:id="@+id/textHeadingCalc"
        android:layout_width="407dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:text="Pawning Data"
        android:textColor="@color/NavyBlueTheme"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCalch2"
        android:layout_width="357dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Total Pawning Requests"
        android:textColor="@color/NavyBlueTheme"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textCalcInput1"
        android:layout_width="140dp"
        android:layout_height="107dp"
        android:layout_marginTop="8dp"
        android:gravity="center|top"
        android:textColor="@color/GoldTheme"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCalch2" />

</androidx.constraintlayout.widget.ConstraintLayout>